<%- include('partials/header'); -%>
<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <p style="font-weight:bold;">
      Title
    </p>
    <input type="text" class="form-control" name="nextPost" value="">
  </div>
  <div class="form-group">
    <p style="font-weight:bold;">
      Post
    </p>
    <textarea name="content" class="form-control" rows="8" cols="80"></textarea>
  </div>


  <button type="submit" class="btn btn-primary" name="button">publish</button>

</form>

